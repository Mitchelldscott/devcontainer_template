{
    "id": "arduino",
    "version": "1.0.0",
    "name": "Arduino Development",
    "description": "Installs Arduino extensions and settings, using PlatformIO.",
    "customizations": {
        "vscode": {
            "extensions": [
                "platformio.platformio-ide",
                "ms-vscode.cpptools",
                "xaver.clang-format"
            ],
            "settings": {
                "[cpp]": {
                    "editor.defaultFormatter": "xaver.clang-format"
                }
            }
        }
    }
}
